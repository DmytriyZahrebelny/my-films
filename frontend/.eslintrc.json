{
  "env": {
      "browser": true,
      "es6": true
  },
  "parser": "babel-eslint",
  "extends": [
      "plugin:react/recommended",
      "airbnb",
      "prettier",
      "prettier/react"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "prettier"
  ],
  "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/state-in-constructor": "off",
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "no-param-reassign": 0,
      "import/prefer-default-export": 0,
      "react/prop-types": 0,
      "react/jsx-props-no-spreading": 0,
      "camelcase": 0
  }
}